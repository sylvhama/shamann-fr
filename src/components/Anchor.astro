---
import clsx from "clsx";

interface Props {
  href: string;
  className?: string;
}

const { href, className, ...restProps } = Astro.props;
---

<a
  class={clsx(
    "inline-flex font-mono text-purple hover:text-pink hover:underline focus:text-pink dark:text-blue dark:hover:text-pink dark:focus:text-pink",
    className,
  )}
  href={href}
  {...restProps}><slot /></a
>
